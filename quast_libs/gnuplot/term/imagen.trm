TERM_PUBLIC void
IMAGEN_linetype(int lt)
{
    static int lastlinetype = -10;
    int pen /*, pattern */ ;

    if (IM_vecpos) {
	/* fprintf(stderr,"move, draw path\n"); */
	IMAGEN_draw_path();
    }

    if (lt < -2)
	lt = LT_BLACK;

    if (lt == LT_BLACK) {
	pen = 4;
    } else {
	pen = (int) (lt / 8) * 2;
	if (pen <= 0)
	    pen = 1;
    }
    lt = (lt % 8) + 2;

    if (lastlinetype == lt)
	return;

    lastlinetype = lt;

    putc(imP_SET_PEN, gpoutfile);
    putc(pen, gpoutfile);
    IMP_set_draw_pattern(lt, pen);
}


