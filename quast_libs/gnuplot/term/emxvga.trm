void
emx_getch()
{
    union REGS reg;
    char c;
    if (_osmode == OS2_MODE)
	VesaGetCharacter(&c);
    else {
	reg.x.ax = 0x0000;
	_int86(0x16, &reg, &reg);
	if (reg.h.al == 0) {
	    reg.x.ax = 0x0000;
	    _int86(0x16, &reg, &reg);
	}
    }
}

