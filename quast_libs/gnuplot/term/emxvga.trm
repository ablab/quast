void g_set(int x, int y, int color);	/* part of SVGA */

void
g_string(int x0, int y0, int color, int angle, char *s)
{
    int i, j, k;
    float sa, ca, x, y;
    k = 0;
    x = 0.5 + x0;
    y = 0.5 + y0;
    sa = sin(- DEG2RAD * angle);
    ca = cos(DEG2RAD * angle);
    while (s[k]) {
	for (i = 0; i < 8; i++)
	    for (j = 0; j < 8; j++)
		g_set(x + ca * j - sa * i, y + ca * i + sa * j, (font[(int) s[k]][i] & (1 << (7 - j))) ? color : 0);
	k++;
	x += ca * 8;
	y += sa * 8;
    }
}

