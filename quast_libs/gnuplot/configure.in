        UIC=${QT5LOC}/uic
        MOC=${QT5LOC}/moc
        RCC=${QT5LOC}/rcc
        LRELEASE=${QT5LOC}/lrelease
      fi
      CXXFLAGS="$CXXFLAGS -fPIC"
    fi 
  fi

  dnl No Qt5, check for Qt4.5 or greater
  if test ${try_qt4} != no; then
    PKG_CHECK_MODULES_NOFAIL(QT, [QtCore >= 4.5 QtGui >= 4.5 QtNetwork >= 4.5 QtSvg >= 4.5])
