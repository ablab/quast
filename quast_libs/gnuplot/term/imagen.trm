static void
IMAGEN_createmap(int name, unsigned short *map)
{
    register int i, j;
    unsigned char s[4], *p;

    p = s;
    *p++ = imP_CREATE_MAP;
    *p++ = name;
    j = 0;
    for (i = 0; i < 127; i++) {
	if (map[i])
	    j++;
    }
    *p = j;
    for (i = 0; i < 3; i++)
	putc(s[i], gpoutfile);

    s[3] = 1;
    for (j = 0; j < 127; j++) {
	if (map[j]) {
	    p = s;
	    *p++ = j;
	    *p++ = map[j] >> 8;
	    *p = map[j] & 255;
	    for (i = 0; i < 4; i++)
		putc(s[i], gpoutfile);
	}
    }
}

